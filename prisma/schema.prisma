generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid()) @map("_id")
  username String @unique
  password String
  role     String
}

model RuangLab {
  id                  String   @id @default(cuid()) @map("_id")
  nama                String
  jumlahKomputerAktif Int
  jumlahKomputerTotal Int
  jadwal              Jadwal[]
}

model Jadwal {
  id         String   @id @default(cuid()) @map("_id")
  ruangLab   RuangLab @relation(fields: [ruangLabId], references: [id])
  ruangLabId String
  hari       String
  jamMulai   String
  jamSelesai String
  matkul     String
  dosen      String
}
